<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MenuBtnStyle" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/ic_launcher_background</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ActivitysButn" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_margin">18dp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="EditTxtStyl" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:textSize">1dp</item>
    </style>
    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">#85B3D8</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>