<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Modifier">

    <TextView
        android:id="@+id/t1"
        style="@style/titre"
        android:text="@string/titre2"></TextView>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:id="@+id/sp">

    </Spinner>
    <EditText
        android:id="@+id/e1"
        style="@style/EditTxtStyl"
        android:layout_below="@+id/sp"
        android:hint="@string/hint1">

    </EditText>

    <EditText
        android:id="@+id/e2"
        style="@style/EditTxtStyl"
        android:layout_below="@+id/e1"
        android:hint="@string/hint2">

    </EditText>

    <EditText
        style="@style/EditTxtStyl"
        android:layout_below="@+id/e2"
        android:id="@+id/e3"
        android:hint="@string/hint3">

    </EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/e3">
        <Button
            style="@style/ActivitysButn"
            android:layout_weight="1"
            android:text="@string/b1Edt"
            android:onClick="modifier">
        </Button>
        <Button
            style="@style/ActivitysButn"
            android:layout_weight="1"
            android:text="@string/btn2"
            android:onClick="supprimer">
        </Button>
    </LinearLayout>
</RelativeLayout>